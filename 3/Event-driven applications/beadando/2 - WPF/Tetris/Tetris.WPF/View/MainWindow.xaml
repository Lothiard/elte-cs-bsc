<Window x:Class="Tetris.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tetris.WPF"
        mc:Ignorable="d"
        Title="Tetris" 
        Height="575" 
        Width="650"
        ResizeMode="NoResize">
    
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border x:Name="GameBorder"
                Grid.Column="0" 
                BorderBrush="Black" 
                BorderThickness="1"
                Background="White"
                VerticalAlignment="Top">
            <Canvas x:Name="GameCanvas" 
                    Width="240" 
                    Height="480"
                    ClipToBounds="True"/>
        </Border>

        <StackPanel Grid.Column="2" 
                    Width="200"
                    VerticalAlignment="Top">
            
            <Label Content="Pályaméret:" 
                   Margin="0,0,0,5"/>
            <ComboBox x:Name="cmbBoardSize"
                      Height="25"
                      Margin="0,0,0,15">
                <ComboBoxItem Content="4×16"/>
                <ComboBoxItem Content="8×16" IsSelected="True"/>
                <ComboBoxItem Content="12×16"/>
            </ComboBox>

            <Button x:Name="btnNewGame"
                    Content="Új játék"
                    Height="30"
                    Margin="0,0,0,20"
                    Command="{Binding NewGameCommand}"/>

            <Button x:Name="btnPause"
                    Content="Szünet"
                    Height="30"
                    Margin="0,0,0,20"
                    Command="{Binding PauseGameCommand}"/>

            <Button x:Name="btnSave"
                    Content="Mentés"
                    Height="30"
                    Margin="0,0,0,20"
                    IsEnabled="False"
                    Command="{Binding SaveGameCommand}"/>

            <Button x:Name="btnLoad"
                    Content="Betöltés"
                    Height="30"
                    Margin="0,0,0,50"
                    Command="{Binding LoadGameCommand}"/>

            <StackPanel Orientation="Horizontal" 
                        Margin="0,0,0,10">
                <Label Content="Játékidő:" 
                       Width="70"/>
                <Label x:Name="lblTimeValue" 
                       Content="{Binding GameTime}"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
