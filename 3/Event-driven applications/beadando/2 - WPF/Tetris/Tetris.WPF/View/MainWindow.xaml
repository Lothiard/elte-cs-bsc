<Window x:Class="Tetris.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tetris" Height="560" Width="550" MinHeight="560" MinWidth="550"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Game Panel (Left side) -->
        <Border Grid.Column="0" 
                BorderBrush="Black" 
                BorderThickness="2" 
                Margin="12,12,0,12"
                Padding="0">
            <ItemsControl x:Name="GameBoard"
                         ItemsSource="{Binding Fields}" 
                         Width="240" 
                         Height="480" 
                         Background="White">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <!-- 8 columns x 30px = 240px, 16 rows x 30px = 480px -->
                        <UniformGrid Rows="16" Columns="8" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#E0E0E0" 
                                BorderThickness="1"
                                Background="{Binding Background}">
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>

        <!-- Controls Panel (Right side) -->
        <StackPanel Grid.Column="1" Margin="12" VerticalAlignment="Top">
            <!-- Board Size Selection -->
            <TextBlock Text="Pályaméret:" Margin="0,0,0,5" FontWeight="SemiBold" />
            <ComboBox x:Name="cmbBoardSize" 
                     Margin="0,0,0,20" 
                     SelectedIndex="1"
                     Height="25">
                <ComboBoxItem Content="4×16" Tag="4,16" />
                <ComboBoxItem Content="8×16" Tag="8,16" />
                <ComboBoxItem Content="12×16" Tag="12,16" />
            </ComboBox>

            <!-- New Game Button -->
            <Button Content="Új játék" 
                    Command="{Binding NewGameCommand}" 
                    Height="30" 
                    Margin="0,0,0,10"
                    FontSize="13" />

            <!-- Pause Button -->
            <Button x:Name="btnPause" 
                    Content="Szünet" 
                    Height="30" 
                    Margin="0,0,0,10"
                    FontSize="13"
                    IsEnabled="False" />

            <!-- Save Button -->
            <Button x:Name="btnSave"
                    Content="Mentés" 
                    Command="{Binding SaveGameCommand}" 
                    Height="30" 
                    Margin="0,0,0,10"
                    FontSize="13"
                    IsEnabled="False" />

            <!-- Load Button -->
            <Button Content="Betöltés" 
                    Command="{Binding LoadGameCommand}" 
                    Height="30" 
                    Margin="0,0,0,30"
                    FontSize="13" />

            <!-- Game Time Display -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="Játékidő: " 
                          VerticalAlignment="Center" 
                          FontWeight="SemiBold" />
                <TextBlock Text="{Binding GameTime}" 
                          VerticalAlignment="Center" 
                          FontWeight="Bold" 
                          Margin="5,0,0,0"
                          FontFamily="Consolas" />
            </StackPanel>

            <!-- Game Over Message -->
            <TextBlock x:Name="txtGameOver"
                      Text="GAME OVER"
                      FontSize="20"
                      FontWeight="Bold"
                      Foreground="Red"
                      HorizontalAlignment="Center"
                      Margin="0,30,0,0"
                      Visibility="Collapsed" />
        </StackPanel>
    </Grid>
</Window>
