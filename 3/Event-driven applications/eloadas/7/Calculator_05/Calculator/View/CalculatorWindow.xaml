<Window x:Class="ELTE.Calculator.View.CalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator" Height="280" Width="275" MinWidth="275" MinHeight="280">
    <Grid>
        <TextBox x:Name="_textNumber" Height="42" VerticalAlignment="Top" FontSize="28" Text="{Binding NumberFieldValue, UpdateSourceTrigger=PropertyChanged}" TextAlignment="Right" FontWeight="Bold" />
        <!-- a szövegdobozhoz úgy kötjük a tartalmat, hogy minden módosításra mentsen -->
        <Button Command="{Binding CalculateCommand}" CommandParameter="+" Content="+" Height="60" HorizontalAlignment="Left" Margin="0,48,0,0" VerticalAlignment="Top" Width="60" FontSize="32" FontWeight="Bold" />
        <Button Command="{Binding CalculateCommand}" CommandParameter="-" Content="-" Height="60" HorizontalAlignment="Left" Margin="66,48,0,0" VerticalAlignment="Top" Width="60" FontSize="32" FontWeight="Bold" />
        <Button Command="{Binding CalculateCommand}" CommandParameter="*" Content="*" Height="60" HorizontalAlignment="Left" Margin="0,114,0,0" VerticalAlignment="Top" Width="60" FontSize="32" FontWeight="Bold" />
        <Button Command="{Binding CalculateCommand}" CommandParameter="/" Content="/" Height="60" HorizontalAlignment="Left" Margin="66,114,0,0" VerticalAlignment="Top" Width="60" FontSize="32" FontWeight="Bold" />
        <Button Command="{Binding CalculateCommand}" CommandParameter="=" Content="=" Height="60" HorizontalAlignment="Left" Margin="0,180,0,0" VerticalAlignment="Top" Width="126" FontSize="32" FontWeight="Bold" />
        <ListBox ItemsSource="{Binding Calculations}" Margin="132,48,0,1" />
    </Grid>
</Window>

    