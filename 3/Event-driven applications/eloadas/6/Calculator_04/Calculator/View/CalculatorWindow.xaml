<Window x:Class="ELTE.Calculator.View.CalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator" Height="280" Width="275" MinWidth="275" MinHeight="280"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown">
    <Grid>
        <TextBox Name="_textNumber" Height="42" VerticalAlignment="Top" FontSize="28" TextAlignment="Right" FontWeight="Bold" />
        <Button Click="Button_Click" Content="+" Height="60" HorizontalAlignment="Left" Margin="0,48,0,0" VerticalAlignment="Top" Width="60" FontSize="32" FontWeight="Bold" />
        <Button Click="Button_Click" Content="-" Height="60" HorizontalAlignment="Left" Margin="66,48,0,0" VerticalAlignment="Top" Width="60" FontSize="32" FontWeight="Bold" />
        <Button Click="Button_Click" Content="*" Height="60" HorizontalAlignment="Left" Margin="0,114,0,0" VerticalAlignment="Top" Width="60" FontSize="32" FontWeight="Bold" />
        <Button Click="Button_Click" Content="/" Height="60" HorizontalAlignment="Left" Margin="66,114,0,0" VerticalAlignment="Top" Width="60" FontSize="32" FontWeight="Bold" />
        <Button Click="Button_Click" Content="=" Height="60" HorizontalAlignment="Left" Margin="0,180,0,0" VerticalAlignment="Top" Width="126" FontSize="32" FontWeight="Bold" />
        <ListBox Name="_listHistory" Margin="132,48,0,1" />
    </Grid>
</Window>

    