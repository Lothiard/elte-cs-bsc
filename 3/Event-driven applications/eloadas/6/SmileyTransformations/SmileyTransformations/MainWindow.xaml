<Window x:Class="ELTE.SmileyTransformations.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transzformációk" Width="835" Height="522">
    <Grid>
        <Rectangle Stroke="#FF000000" HorizontalAlignment="Left" Margin="159,131,0,0" x:Name="_rectangleSmiley" Width="200" Height="200" VerticalAlignment="Top">
            <Rectangle.Fill>
                <ImageBrush ImageSource="smiley.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <GroupBox Header="Pozicionálás" Height="83" HorizontalAlignment="Right" Margin="0,0,3,0" VerticalAlignment="Top" Width="280">
            <Grid>
                <Label Height="28" HorizontalAlignment="Left" Margin="6,-1,0,0" VerticalAlignment="Top" Width="125" Content="Vízszintes:"></Label>
                <Slider Height="25" Name="_sliderTranslateX" ValueChanged="Slider_ValueChanged" LargeChange="0.1" Margin="81,2,0,0" Maximum="100" Minimum="-100" SmallChange="1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="181" />
                <Label Height="31" HorizontalAlignment="Left" Margin="4,28,0,0" VerticalAlignment="Top" Width="133" Content="Függőleges:"></Label>
                <Slider Height="23" Name="_sliderTranslateY" ValueChanged="Slider_ValueChanged" HorizontalAlignment="Left" LargeChange="0.1" Margin="79,36,0,0" Maximum="100" Minimum="-100" SmallChange="1" VerticalAlignment="Top" Width="183" />
            </Grid>
        </GroupBox>
        <GroupBox Header="Forgatás" Height="112" HorizontalAlignment="Right" Margin="0,228,2,0" VerticalAlignment="Top" Width="280">
            <Grid>
                <Label VerticalAlignment="Top" Margin="6,0,0,0" Content="Szög:" Height="27" HorizontalAlignment="Left" Width="67" />
                <Slider Name="_sliderRotateAngle" ValueChanged="Slider_ValueChanged" VerticalAlignment="Top" Margin="79,3,0,0" Height="24" Maximum="360" HorizontalAlignment="Left" Width="182" />
                <Label Height="27" HorizontalAlignment="Left" Margin="6,29,0,0" VerticalAlignment="Top" Width="67" Content="X eltolás:"></Label>
                <Slider Name="_sliderRotatePointX" ValueChanged="Slider_ValueChanged" Height="27" HorizontalAlignment="Left" Margin="79,29,0,0" Minimum="-100" Maximum="200" VerticalAlignment="Top" Width="182" />
                <Slider Name="_sliderRotatePointY" ValueChanged="Slider_ValueChanged" Height="26" Margin="79,62,0,0" Minimum="-100" Maximum="200" VerticalAlignment="Top" HorizontalAlignment="Left" Width="182" />
                <Label Height="26" HorizontalAlignment="Left" Margin="6,62,0,0" VerticalAlignment="Top" Width="67" Content="Y eltolás:"></Label>
            </Grid>
        </GroupBox>
        <GroupBox Header="Nagyítás" Height="136" HorizontalAlignment="Right" Margin="0,86,2,0" VerticalAlignment="Top" Width="280">
            <Grid>
                <Label Content="Vízszintes:" Height="27" HorizontalAlignment="Left" Margin="6,0,0,0" VerticalAlignment="Top" Width="78" />
                <Label Content="X eltolás:" Height="27" HorizontalAlignment="Left" Margin="6,60,0,0" VerticalAlignment="Top" Width="67" />
                <Label Content="Y eltolás:" Height="26" HorizontalAlignment="Left" Margin="6,89,0,0" VerticalAlignment="Top" Width="67" />
                <Label Content="Függőleges:" Height="27" Margin="6,28,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="78" />
                <Slider Name="_sliderScaleX" ValueChanged="Slider_ValueChanged" Height="26" Margin="80,2,0,0" Minimum="-2" Maximum="2" SmallChange=".1" LargeChange=".1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="181" />
                <Slider Name="_sliderScaleY" ValueChanged="Slider_ValueChanged" Height="26" LargeChange="0.1" Margin="80,28,0,0" Maximum="2" Minimum="-2" SmallChange="0.1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="181" />
                <Slider Name="_sliderScalePointX" ValueChanged="Slider_ValueChanged" Height="27" HorizontalAlignment="Left" Margin="80,60,0,0" Maximum="200" Minimum="-100" VerticalAlignment="Top" Width="181" />
                <Slider Name="_sliderScalePointY" ValueChanged="Slider_ValueChanged" Height="26" HorizontalAlignment="Left" Margin="80,89,0,0" Maximum="200" Minimum="-100" VerticalAlignment="Top" Width="181" />
            </Grid>
        </GroupBox>
        <GroupBox Header="Ferdítés" Height="136" HorizontalAlignment="Right" Margin="0,346,2,0" Name="groupBox4" VerticalAlignment="Top" Width="280">
            <Grid>
                <Label Content="Vízszintes:" Height="27" HorizontalAlignment="Left" Margin="6,0,0,0" VerticalAlignment="Top" Width="78" />
                <Label Content="X eltolás:" Height="27" HorizontalAlignment="Left" Margin="6,60,0,0" VerticalAlignment="Top" Width="67" />
                <Label Content="Y eltolás:" Height="26" HorizontalAlignment="Left" Margin="6,89,0,0" VerticalAlignment="Top" Width="67" />
                <Label Content="Függőleges:" Height="27" HorizontalAlignment="Left" Margin="6,28,0,0" VerticalAlignment="Top" Width="78" />
                <Slider Name="_sliderSkewX" ValueChanged="Slider_ValueChanged" Height="26" HorizontalAlignment="Left" LargeChange="0.1" Margin="80,1,0,0" Maximum="50" Minimum="-50" SmallChange="0.1" VerticalAlignment="Top" Width="181" />
                <Slider Name="_sliderSkewY" ValueChanged="Slider_ValueChanged" Height="26" LargeChange="0.1" Margin="80,28,7,0" Maximum="50" Minimum="-50" SmallChange="0.1" VerticalAlignment="Top" />
                <Slider Name="_sliderSkewPointX" ValueChanged="Slider_ValueChanged" Height="27" HorizontalAlignment="Left" Margin="80,60,0,0" Maximum="200" Minimum="-100" VerticalAlignment="Top" Width="181" />
                <Slider Name="_sliderSkewPointY" ValueChanged="Slider_ValueChanged" Height="26" HorizontalAlignment="Left" Maximum="200" Minimum="-100" VerticalAlignment="Top" Width="181" Margin="80,87,0,0" />
            </Grid>
        </GroupBox>
        <Button Content="Alapértékek" Height="32" HorizontalAlignment="Left" Name="_ButtonDefault" VerticalAlignment="Top" Width="119" Click="ButtonDefault_Click" />
    </Grid>
</Window>
